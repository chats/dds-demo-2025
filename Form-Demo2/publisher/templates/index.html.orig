<!DOCTYPE html>
<html>
<head>
    <title>DDS Message Publisher</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='css/styles.css') }}">
</head>
<body>
    <h2>Publish DDS Message</h2>
    
    <div id="successAlert" class="alert alert-success">
        Message published successfully!
    </div>
    
    <div id="errorAlert" class="alert alert-error">
        Failed to publish message. Please try again.
    </div>

    <div class="form-group">
        <label>Subject:</label>
        <input type="text" id="subject" required>
    </div>
    <div class="form-group">
        <label>Recipient:</label>
        <input type="text" id="recipient" required>
    </div>
    <div class="form-group">
        <label>File Upload:</label>
        <input type="file" id="fileInput" onchange="handleFileSelect()">
        <div id="uploadPreview" class="upload-preview">
            <div class="file-info"></div>
            <div class="progress">
                <div class="progress-bar"></div>
            </div>
        </div>
        <input type="hidden" id="fileUrl">
    </div>
    <button onclick="publishMessage()" id="publishButton">Publish Message</button>

    <script src="{{ url_for('static', filename='js/main.js') }}"></script>
</body>
</html>