<!DOCTYPE html>
<html>
<head>
    <title>DDS Messages</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='css/styles.css') }}">
</head>
<body>
    <h2>DDS Messages</h2>
    
    {% if current_filter %}
    <div class="current-filter">
        Currently filtering by recipient: <strong>{{ current_filter }}</strong>
    </div>
    {% endif %}

    <div id="messageContainer">
        {% for message in messages %}
        <div class="message-card">
            <div class="message-header">
                <h3>{{ message.subject }}</h3>
                <div class="message-meta">
                    Recipient: {{ message.recipient }}<br>
                    Time: {{ message.timestamp }}
                </div>
            </div>
            {% if message.excel_data %}
            <div class="excel-data">
                <table class="excel-table">
                    <thead>
                        <tr>
                            {% for header in message.excel_data.headers %}
                            <th>{{ header }}</th>
                            {% endfor %}
                        </tr>
                    </thead>
                    <tbody>
                        {% for row in message.excel_data.rows %}
                        <tr>
                            {% for cell in row %}
                            <td>{{ cell }}</td>
                            {% endfor %}
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% endif %}
        </div>
        {% endfor %}
    </div>

    <script>
        const currentFilter = "{{ current_filter }}";
    </script>
    <script src="{{ url_for('static', filename='js/main.js') }}"></script>
</body>
</html>